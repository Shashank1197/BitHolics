                        <p class="text-sm text-gray-200">Government of India</p>
                    </div>
                </div>
                <a href="/emergency" class="emergency-btn px-6 py-2 rounded-full font-bold flex items-center space-x-2">
                    <span>üö®</span>
                    <span>Emergency</span>
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Login Form -->
            <div class="lg:col-span-2">
                <div class="login-card rounded-xl shadow-xl p-8">
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Citizen Login</h2>
                    <p class="text-gray-600 mb-6">Access your police services securely</p>
                    
                    <form id="loginForm" class="space-y-6">
                        <div>
                            <label for="aadhaar" class="block text-sm font-medium text-gray-700">Aadhaar Number</label>
                            <input type="text" id="aadhaar" name="aadhaar" 
                                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                   pattern="\d{12}" maxlength="12" required
                                   placeholder="Enter 12-digit Aadhaar number">
                        </div>

                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700">Mobile Number</label>
                            <input type="text" id="phone" name="phone" 
                                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                   pattern="\d{10}" maxlength="10" required
                                   placeholder="Enter 10-digit mobile number">
                        </div>

                        <div id="otpSection" class="hidden">
                            <label for="otp" class="block text-sm font-medium text-gray-700">OTP Verification</label>
                            <div class="flex space-x-4">
                                <input type="text" id="otp" name="otp"
                                       class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                       pattern="\d{6}" maxlength="6" required
                                       placeholder="Enter 6-digit OTP">
                                <div id="timer" class="mt-1 text-sm text-gray-500 hidden flex items-center">
                                    <span class="bg-gray-100 px-3 py-1 rounded-lg">
                                        <span id="minutes">05</span>:<span id="seconds">00</span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-between items-center">
                            <button type="button" id="requestOTP" 
                                    class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition flex items-center space-x-2">
                                <span>üîê</span>
                                <span>Request OTP</span>
                            </button>
                            <button type="submit" id="submitOTP" 
                                    class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition flex items-center space-x-2 hidden">
                                <span>‚úì</span>
                                <span>Verify OTP</span>
                            </button>
                        </div>

                        <div id="error" class="text-red-500 text-sm hidden"></div>
                    </form>

                    <div class="mt-6 text-center">
                        <p class="text-sm text-gray-600">
                            Don't want to login? <a href="/fir/new" class="text-blue-600 hover:underline">File Anonymous FIR</a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="space-y-6">
                <div class="bg-white rounded-xl shadow-xl p-6">
                    <h3 class="text-xl font-bold text-gray-800 mb-4">Quick Services</h3>
                    <div class="space-y-4">
                        <a href="/fir/new" class="feature-card block p-4 bg-gray-50 rounded-lg hover:bg-gray-100">
                            <div class="flex items-center space-x-3">
                                <span class="text-2xl">üìù</span>
