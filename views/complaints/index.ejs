<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaints - Virtual Police Station</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Virtual Police Station</h1>
            <div class="space-x-4">
                <a href="/" class="hover:text-blue-200">Home</a>
                <a href="/complaints/new" class="bg-white text-blue-600 px-4 py-2 rounded hover:bg-blue-50">New Complaint</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto p-4">
        <% if (messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= messages.error %></span>
            </div>
        <% } %>

        <% if (messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= messages.success %></span>
            </div>
        <% } %>

        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold mb-6">Your Complaints</h2>

            <% if (complaints && complaints.length > 0) { %>
                <div class="space-y-4">
                    <% complaints.forEach(complaint => { %>
                        <div class="border rounded-lg p-4 hover:bg-gray-50">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="text-lg font-semibold"><%= complaint.title %></h3>
                                    <p class="text-gray-600 text-sm">Filed on <%= new Date(complaint.createdAt).toLocaleDateString() %></p>
                                </div>
                                <span class="px-3 py-1 rounded-full text-sm
                                    <%= complaint.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : '' %>
                                    <%= complaint.status === 'under_investigation' ? 'bg-blue-100 text-blue-800' : '' %>
                                    <%= complaint.status === 'resolved' ? 'bg-green-100 text-green-800' : '' %>
                                    <%= complaint.status === 'rejected' ? 'bg-red-100 text-red-800' : '' %>">
                                    <%= complaint.status.replace('_', ' ').toUpperCase() %>
                                </span>
                            </div>
                            <p class="mt-2 text-gray-700"><%= complaint.description.substring(0, 150) %>...</p>
                            <div class="mt-4 flex justify-between items-center">
                                <div class="flex space-x-2">
                                    <span class="px-2 py-1 bg-gray-100 rounded text-sm"><%= complaint.category %></span>
                                    <span class="px-2 py-1 bg-gray-100 rounded text-sm"><%= complaint.priority %></span>
                                </div>
                                <a href="/complaints/<%= complaint._id %>" class="text-blue-600 hover:text-blue-800">View Details</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-8">
                    <p class="text-gray-600 mb-4">You haven't filed any complaints yet.</p>
                    <a href="/complaints/new" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">File New Complaint</a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html> 