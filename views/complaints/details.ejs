<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint Details - Virtual Police Station</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Virtual Police Station</h1>
            <div class="space-x-4">
                <a href="/" class="hover:text-blue-200">Home</a>
                <a href="/complaints" class="hover:text-blue-200">My Complaints</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto p-4">
        <% if (messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= messages.error %></span>
            </div>
        <% } %>

        <% if (messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= messages.success %></span>
            </div>
        <% } %>

        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md p-6">
            <div class="flex justify-between items-start mb-6">
                <h2 class="text-2xl font-bold">Complaint Details</h2>
                <span class="px-3 py-1 rounded-full text-sm font-semibold
                    <%= complaint.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                        complaint.status === 'under_investigation' ? 'bg-blue-100 text-blue-800' :
                        complaint.status === 'resolved' ? 'bg-green-100 text-green-800' :
                        'bg-red-100 text-red-800' %>">
                    <%= complaint.status.replace(/_/g, ' ').toUpperCase() %>
                </span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <h3 class="text-lg font-semibold mb-2">Basic Information</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Title</label>
                            <p class="mt-1"><%= complaint.title %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Category</label>
                            <p class="mt-1"><%= complaint.category.replace(/_/g, ' ').toUpperCase() %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Priority</label>
                            <p class="mt-1"><%= complaint.priority.toUpperCase() %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500">Filed On</label>
                            <p class="mt-1"><%= new Date(complaint.createdAt).toLocaleString() %></p>
                        </div>
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-semibold mb-2">Description</h3>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="whitespace-pre-wrap"><%= complaint.description %></p>
                    </div>
                </div>
            </div>

            <% if (complaint.evidence && complaint.evidence.length > 0) { %>
                <div class="mt-8">
                    <h3 class="text-lg font-semibold mb-4">Evidence</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        <% complaint.evidence.forEach(function(file) { %>
                            <div class="border rounded-lg p-4">
                                <div class="flex items-center space-x-2">
                                    <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                    </svg>
                                    <span class="text-sm font-medium"><%= file.originalname %></span>
                                </div>
                                <div class="mt-2 text-sm text-gray-500">
                                    Size: <%= (file.size / 1024).toFixed(2) %> KB
                                </div>
                                <a href="/complaints/download/<%= file.filename %>" 
                                   class="mt-2 inline-block text-sm text-blue-600 hover:text-blue-800">
                                    Download
                                </a>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <div class="mt-8 flex justify-end space-x-4">
                <a href="/complaints" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Back to List
                </a>
                <% if (complaint.status === 'pending') { %>
                    <form action="/complaints/<%= complaint._id %>/cancel" method="POST" class="inline">
                        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">
                            Cancel Complaint
                        </button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html> 