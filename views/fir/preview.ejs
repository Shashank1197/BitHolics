<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Preview FIR - Virtual Police Station</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <nav class="bg-[#001f3f] text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <div class="police-badge w-10 h-10 rounded-full flex items-center justify-center">
                    <span class="text-[#FFD700] text-xl">âš¡</span>
                </div>
                <h1 class="text-xl font-bold">Virtual Police Station</h1>
            </div>
            <a href="/fir/new" class="hover:text-[#FFD700]">Back to Form</a>
        </div>
    </nav>

    <main class="container mx-auto p-4">
        <% if (messages.error) { %>
            <div class="mb-4 p-4 rounded-lg bg-red-100 text-red-700">
                <%= messages.error %>
            </div>
        <% } %>
        <% if (messages.success) { %>
            <div class="mb-4 p-4 rounded-lg bg-green-100 text-green-700">
                <%= messages.success %>
            </div>
        <% } %>

        <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg p-6">
            <div class="border-b-2 border-[#001f3f] pb-4 mb-6">
                <h2 class="text-2xl font-bold text-[#001f3f]">FIR Preview</h2>
                <p class="text-gray-600">Please review your FIR before submission</p>
            </div>

            <div class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Complainant Name</h3>
                        <p class="mt-1 text-lg"><%= firData.firDetails.name %></p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Contact Number</h3>
                        <p class="mt-1 text-lg"><%= firData.firDetails.contact %></p>
                    </div>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500">Aadhaar Number</h3>
                    <p class="mt-1 text-lg"><%= firData.firDetails.aadhaar || 'Not provided' %></p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500">Type of Crime</h3>
                    <p class="mt-1 text-lg"><%= firData.firDetails.crimeType %></p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500">Location of Crime</h3>
                    <p class="mt-1 text-lg"><%= firData.firDetails.location %></p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500">Date and Time of Crime</h3>
                    <p class="mt-1 text-lg"><%= new Date(firData.firDetails.dateTime).toLocaleString() %></p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500">Description of Incident</h3>
                    <p class="mt-1 text-lg whitespace-pre-wrap"><%= firData.firDetails.description %></p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500">Uploaded Evidence</h3>
                    <div class="mt-2 grid grid-cols-2 gap-4">
                        <% if (firData.evidence && firData.evidence.length > 0) { %>
                            <% firData.evidence.forEach(file => { %>
                                <div class="border rounded-lg p-3">
                                    <p class="text-sm font-medium"><%= file.originalname %></p>
                                    <p class="text-xs text-gray-500"><%= (file.size / 1024 / 1024).toFixed(2) %> MB</p>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="text-gray-500">No evidence uploaded</p>
                        <% } %>
                    </div>
                </div>

                <div class="border-t-2 border-[#001f3f] pt-4 mt-6">
                    <div class="flex items-center space-x-2">
                        <input type="checkbox" id="consent" required class="rounded text-[#001f3f] focus:ring-[#001f3f]">
                        <label for="consent" class="text-sm text-gray-700">
                            I confirm that all information provided is true to the best of my knowledge
                        </label>
                    </div>
                </div>

                <div class="flex justify-end space-x-4">
                    <button onclick="window.location.href='/fir/new'" 
                            class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition">
                        Edit FIR
                    </button>
                    <form action="/fir/submit" method="POST" class="inline">
                        <button type="submit" id="submitFir" 
                                class="bg-[#001f3f] text-white px-4 py-2 rounded hover:bg-blue-800 transition">
                            Submit FIR
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.getElementById('submitFir').addEventListener('click', function(e) {
            if (!document.getElementById('consent').checked) {
                e.preventDefault();
                alert('Please confirm that the information is true before submitting');
            }
        });
    </script>
</body>
</html> 