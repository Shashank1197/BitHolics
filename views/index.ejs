    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtual Police Station</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .police-badge {
            background: linear-gradient(135deg, #001f3f 0%, #003366 100%);
        }
    </style>
</head>
<body class="bg-gray-100">
    <nav class="bg-[#001f3f] text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <div class="police-badge w-10 h-10 rounded-full flex items-center justify-center">
                    <span class="text-[#FFD700] text-xl">âš¡</span>
                </div>
                <h1 class="text-xl font-bold">Virtual Police Station</h1>
            </div>
            <div class="space-x-4">
                <a href="/" class="hover:text-[#FFD700]">Home</a>
                <a href="/login" class="hover:text-[#FFD700]">Login</a>
                <a href="/fir/new" class="hover:text-[#FFD700]">File FIR</a>
                <a href="/track" class="hover:text-[#FFD700]">Track Case</a>
